<div class="container-fluid bg-white py-4">
  <div class="row justify-content-center">
    <div class="col-12 text-center mb-4">
      <%= image_tag "Logo.png", alt: "Your Logo Description", class: "img-fluid mb-4" %>
      <h2>Generate Data</h2>
      <p>Add your prompt below to generate sample data:</p>
    </div>
    <div class="col-md-4"> <!-- Adjust the column size as needed -->
      <form id="generateForm" class="mb-4">
        <div class="mb-3">
              <label for="selectOption">Select Scenario:</label>
              <select id="selectOption">
                <option value="1">Scenario 1: creating jobseeker and site data instance</option>
                <option value="2">Scenario 2: when you need student data</option>
                <option value="3">Scenario 3: testing teacher student course enrollments</option>
                <option value="4">Scenario 4: testing all the data</option>
                <!-- Add more options as needed -->
              </select>
        </div>
        <div class="d-grid gap-2">
          <button id="generateButton" type="button" class="btn btn-success">Generate</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Graph Row -->
  <div class="row mt-5 justify-content-center">
    <div class="col-md-8"> <!-- Adjust the column size if needed -->
      <div id="d3-graph" class="graph-box border p-4 d-flex justify-content-center align-items-center">
        <!-- Your SVG content goes here -->
      </div>
    </div>
  </div>
</div>
